{
  "name": "nauticalc",
  "version": "1.0.3",
  "description": "A nautical calculations tool",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "author": {
	  "name": "Adrian Reid",
	  "email": "adrian@reidfam.uk",
	  "url": "http://www.adrian.reidfam.uk"
  },
  "homepage": "http://www.reidfam.uk/nauticalc/",
  "copyright": "Copyright 2018 Â© Adrian Reid",
  "license": "MIT",
  "repository": {
	  "type": "git",
	  "url": "https://github.com/EdTheLoon/nauticalc-electron.git"
  },
  "devDependencies": {
    "electron": "^2.0.8",
    "electron-builder": "^20.28.4",
    "electron-packager": "^12.1.1"
  },
  "build": {
    "appId": "uk.reidfam.adrian.nauticalc",
    "productName": "NautiCalc",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": [
	      "nsis",
	      "portable"],
      "icon": "build/icon.ico"
    }
  },
  "dependencies": {
  }
}
