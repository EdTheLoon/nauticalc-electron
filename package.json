{
  "name": "nauticalc",
  "version": "1.0.0",
  "description": "A nautical calculations tool",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "author": {
	  "name": "Adrian Reid",
	  "email": "adrian@adrianreid.eu",
	  "url": "http://www.adrianreid.eu"
  },
  "homepage": "http://www.adrianreid.eu",
  "license": "MIT",
  "devDependencies": {
    "electron": "^2.0.8",
    "electron-builder": "^20.28.4",
    "electron-packager": "^12.1.1"
  },
  "build": {
    "appId": "eu.adrianreid.nauticalc",
    "productName": "NautiCalc",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  },
  "dependencies": {
  }
}
